import {unitt}!
import {src/collatz-conjecture}!

suite "Collatz Conjecture"[
    test "zero steps for one" [
        result: collatz 1
        assert -> 0 = result
    ]

    test.skip "large number of even and odd steps" [
        result: collatz 1000000
        assert -> 152 = result
    ]

    test.skip "even and odd steps" [
        result: collatz 12
        assert -> 9 = result
    ]

    test.skip "divide if even" [
        result: collatz 16
        assert -> 4 = result
    ]

    test.skip "zero is an error" [
        result: collatz 0
        assert -> null = result
    ]

    test.skip "negative value is an error" [
        result: collatz neg 15
        assert -> null = result
    ]
]
