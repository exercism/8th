
    test "zero steps for one" [
        result: collatz 1
        assert -> 0 = result
    ]


    test "large number of even and odd steps" [
        result: collatz 1000000
        assert -> 152 = result
    ]
 
    test "even and odd steps" [
        result: collatz 12
        assert -> 9 = result
    ]

    test "divide if even" [
        result: collatz 16
        assert -> 4 = result
    ]

