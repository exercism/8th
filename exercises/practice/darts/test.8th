import {unitt}!
import {src/darts}!

suite "Darts" [
"Missed target"
    0
    ( neg 9 9 darts-score )
    equal?


"On the outer circle"
    1
    ( 0 10 darts-score )
    equal?

"On the middle circle"
    5
    ( neg 5 0 darts-score )
    equal?    
    test.skip "On the inner circle" [
        result: darts-score 0 neg 1
        assert -> 10 = result
    ]

    test.skip "Exactly on center" [
        result: darts-score 0 0
        assert -> 10 = result
    ]

    test.skip "Near the center" [
        result: darts-score neg 0.1 neg 0.1
        assert -> 10 = result
    ]

    test.skip "Just within the inner circle" [
        result: darts-score 0.7 0.7
        assert -> 10 = result
    ]

"Just outside the inner circle"
    5
    ( 0.8 neg 0.8 darts-score )
    equal?

"Just within the middle circle"
    5
    ( neg 3.5 3.5 darts-score )
    equal?

"Just outside the middle circle"
    1
    ( neg 3.6 neg 3.6 darts-score )
    equal?

"Just within the outer circle"
    1
    ( neg 7.0 7.0 darts-score )
    equal?

"Just outside the outer circle"
    0
    ( 7.1 neg 7.1 darts-score )
    equal?

"Asymmetric position between the inner and middle circles"
    5
    ( 0.5 neg 4 darts-score )
    equal?


]
