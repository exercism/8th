import {unitt}!
import {src/acronym}!

suite "Acronym" [
  

    test.skip "ignoring punctuation and casing" [
        result: acronym "Complementary metal-oxide semiconductor"
        assert -> "CMOS" = result
    ]


    test.skip "ignores punctuation" [
        result: acronym "First In, First Out"
        assert -> "FIFO" = result
    ]

    test.skip "from phrases with acronyms" [
        result: acronym "GNU Image Manipulation Program"
        assert -> "GIMP" = result
    ]

    test.skip "from phrases with apostrophes" [
        result: acronym "Halley's Comet"
        assert -> "HC" = result
    ]

    test.skip "from title case" [
        result: acronym "Portable Network Graphics"
        assert -> "PNG" = result
    ]

    test.skip "from lower case" [
        result: acronym "Ruby on Rails"
        assert -> "ROR" = result
    ]

    test.skip "from a very long abbreviation" [
        result: acronym "Rolling On The Floor Laughing So Hard That My Dogs Came Over And Licked Me"
        assert -> "ROTFLSHTMDCOALM" = result
    ]

    test.skip "from phrases with consecutive delimiters" [
        result: acronym "Something - I made up from thin air"
        assert -> "SIMUFTA" = result
    ]

    test.skip "from phrases with underscore emphasis" [
        result: acronym "The Road _Not_ Taken"
        assert -> "TRNT" = result
    ]
]
