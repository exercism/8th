
    test "empty sentence" [
        result: pangram? ""
        assert -> false = result
    ]


"missing letters replaced by numbers"
    ( "7h3 qu1ck brown fox jumps ov3r 7h3 lazy dog" pangram?  )
    false?

    test "mixed case and punctuation" [
        result: pangram? "\"Five quacking Zephyrs jolt my wax bed.\""
        assert -> true = result
    ]

    test "missing letter x" [
        result: pangram? "a quick movement of the enemy will jeopardize five gunboats"
        assert -> false = result
    ]

"perfect lower case"
    ( "abcdefghijklmnopqrstuvwxyz" pangram?  )
    true?

"missing letter h"
    ( "five boxing wizards jump quickly at it" pangram?  )
    false?

"with numbers"
    ( "the 1 quick brown fox jumps over the 2 lazy dogs" pangram?  )
    true?

"only lower case"
    ( "the quick brown fox jumps over the lazy dog" pangram?  )
    true?

"missing d and g"
    ( "the quick brown fox jumps over with lazy FX" pangram?  )
    false?

"with underscores"
    ( "the_quick_brown_fox_jumps_over_the_lazy_dog" pangram?  )
    true?

