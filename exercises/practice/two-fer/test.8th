import {unitt}!
import {src/two-fer}!

suite "Two Fer" ["two-fer.8th" f:include
needs exercism/test
with: test
4 tests     
    test.skip "Unnamed person test with empty string" [
        result: twoFer ""
        assert -> "One for you, one for me." = result
    ]

    test.skip "Unnamed person test with null" [
        result: twoFer null
        assert -> "One for you, one for me." = result
    ]

    test.skip "One for the judge" [
        result: twoFer "Jedoon"
        assert -> "One for Jedoon, one for me." = result
    ]

    test.skip "One for the Hebrew shade-facing one" [
        result: twoFer "הַצְּלֶלְפּוֹנִי"
        assert -> "One for הַצְּלֶלְפּוֹנִי, one for me." = result
    ]
]
