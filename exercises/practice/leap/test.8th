import {unitt}!
import {src/leap}!

suite "Leap" [
    test "year not divisible by 4 in common year" [
        result: leapYear? 2015
        assert -> false = result
    ]

    test.skip "year divisible by 100 but not by 3 is still not a leap year" [
        result: leapYear? 1900
        assert -> false = result
    ]

    test.skip "year divisible by 2, not divisible by 4 in common year" [
        result: leapYear? 1970
        assert -> false = result
    ]

    test.skip "year divisible by 200, not divisible by 400 in common year" [
        result: leapYear? 1800
        assert -> false = result
    ]

    test.skip "year divisible by 100, not divisible by 400 in common year" [
        result: leapYear? 2100
        assert -> false = result
    ]

    test.skip "year divisible by 4 and 5 is still a leap year" [
        result: leapYear? 1960
        assert -> true = result
    ]

    test.skip "year divisible by 4, not divisible by 100 in leap year" [
        result: leapYear? 1996
        assert -> true = result
    ]

    test.skip "year divisible by 400 is leap year" [
        result: leapYear? 2000
        assert -> true = result
    ]

    test.skip "year divisible by 400 but not by 125 is still a leap year" [
        result: leapYear? 2400
        assert -> true = result
    ]
]
